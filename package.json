{
  "name": "express-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node .",
    "dev": "concurrently \"yarn watch:css\" \"nodemon .\"",
    "build:css": "tailwindcss -i ./input.css -o ./public/css/style.css",
    "watch:css": "tailwindcss -i ./input.css -o ./public/css/style.css --watch"
  },
  "dependencies": {
    "ejs": "^4.0.1",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.2.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.13",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19"
  }
}